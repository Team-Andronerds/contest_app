<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:orientation="horizontal"
        android:id="@+id/recent_trip_layout"
        android:background="@color/toolbar_color">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dip"
            android:layout_height="125dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:id="@+id/profile_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dip"
                android:textSize="20sp"
                android:id="@+id/profile_name"
                android:textColor="@color/white"
                android:text="profile_name"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/profile_info_spacing"
        android:layout_marginLeft="20dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make/Model: "
            android:textSize="@dimen/profile_label"
            android:textStyle="bold">>
        </TextView>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/profile_info"
            android:id="@+id/my_vehicle_info">

        </TextView>

    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/profile_info_spacing"
        android:layout_marginLeft="20dip">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vin #: "
            android:textSize="@dimen/profile_label"
            android:textStyle="bold">>
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/profile_info"
            android:id="@+id/my_vehicle_vin">
        </TextView>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/profile_info_spacing"
        android:layout_marginLeft="20dip">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Color: "
            android:textSize="@dimen/profile_label"
            android:textStyle="bold">
        </TextView>

        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="15dip">
            <View
                android:layout_height="20dip"
                android:layout_width="200dip"
                android:background="@color/black"
                android:id="@+id/borderBox">

            </View>
            <View android:layout_height="18dip"
                android:layout_width="198dip"
                android:background="@color/white"
                android:layout_alignLeft="@id/borderBox"
                android:layout_alignTop="@id/borderBox"
                android:layout_marginTop="1dip"
                android:layout_marginLeft="1dip"
                android:id="@+id/my_vehicle_color">
            </View>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/profile_info_spacing"
        android:layout_marginLeft="20dip">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Mail: "
            android:textSize="@dimen/profile_label"
            android:textStyle="bold">>
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/profile_info"
            android:id="@+id/my_vehicle_email">
        </TextView>
    </LinearLayout>



</LinearLayout>